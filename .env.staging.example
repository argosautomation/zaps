# ============================================================
# Staging Environment Variables (.env.staging.example)
# Copy this to the server as backend/.env
# ============================================================

# ---------- Database (Local Docker Postgres) ----------
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=zaps
DB_SSLMODE=disable
DATABASE_URL=postgres://postgres:postgres@postgres:5432/zaps?sslmode=disable

# ---------- Redis ----------
REDIS_URL=redis:6379

# ---------- Application ----------
FRONTEND_URL=https://dev.zaps.ai
ALLOWED_ORIGINS=https://dev.zaps.ai

# ---------- Security (MUST be unique, NOT shared with prod) ----------
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=<GENERATE_NEW_KEY>
JWT_SECRET=<GENERATE_NEW_SECRET>

# ---------- OAuth (Register separate callbacks for dev.zaps.ai) ----------
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>
GOOGLE_REDIRECT_URL=https://dev.zaps.ai/auth/google/callback

GITHUB_CLIENT_ID=<YOUR_GITHUB_CLIENT_ID>
GITHUB_CLIENT_SECRET=<YOUR_GITHUB_CLIENT_SECRET>
GITHUB_REDIRECT_URL=https://dev.zaps.ai/auth/github/callback

# ---------- Email (Mailgun) ----------
MAILGUN_DOMAIN=<YOUR_MAILGUN_DOMAIN>
MAILGUN_API_KEY=<YOUR_MAILGUN_API_KEY>

# ---------- Stripe (Use TEST mode keys for staging) ----------
STRIPE_SECRET_KEY=<YOUR_STRIPE_TEST_KEY>
STRIPE_WEBHOOK_SECRET=<YOUR_STRIPE_TEST_WEBHOOK_SECRET>
STRIPE_PRICE_ID=<YOUR_STRIPE_TEST_PRICE_ID>

# ---------- Fallback LLM Key (optional) ----------
DEEPSEEK_API_KEY=<YOUR_DEEPSEEK_KEY>
